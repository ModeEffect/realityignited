<?xml version="1.0" encoding="utf-8"?>
<bundle name="MemberPress Developer Tools">
    <domain name="memberpress-developer-tools">
        <project name="MemberPress Developer Tools" slug="memberpress-developer-tools">
            <source>
                <directory>.</directory>
            </source>
            <target>
                <directory base="WP_LANG_DIR">plugins</directory>
            </target>
            <template locked="true">
                <file>i18n/memberpress-developer-tools.pot</file>
            </template>
        </project>
    </domain>
    <exclude>
        <directory>vendor</directory>
        <directory>tests</directory>
        <directory>script</directory>
        <directory>node_modules</directory>
        <directory>bin</directory>
        <directory>public</directory>
    </exclude>
</bundle>
